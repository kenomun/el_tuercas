<div id="servicios">
  <div class="row justify-content-center">
    <div class="card col-md-8">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <h5 class="card-title">Listado de vehiculos registrados</h5>
          <%= link_to new_vehiculo_path, class: "small-text btn btn-success btn-sm" do %>
            <i class="fas fa-plus"></i> Agregar vehiculo
          <% end %>
        </div>
        <table class="table table-striped table-sm mt-3">
          <thead>
            <tr>
              <th>#</th>
              <th class="text-small">Marca</th>
              <th class="text-small">Modelo</th>
              <th class="text-small">Año</th>
              <th class="text-small">Patente</th>
              <% if current_user.admin? %>
                <th class="text-small">Dueño</th>
              <% end %>
              <th class="text-small">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @vehiculos.each.with_index(1) do |vehiculo, index| %>
              <tr>
                <td class="small-text"><%= index %></td>
                <td class="small-text"><%= vehiculo.marca %></td>
                <td class="small-text"><%= vehiculo.modelo %></td>
                <td class="small-text"><%= vehiculo.año %></td>
                <td class="small-text"><%= vehiculo.patente %></td>
                <% if current_user.admin? %>
                  <td class="small-text"><%= vehiculo.user.nombre %></td>
                <% end %>
                <td>
                  <div class="d-flex">
                    <%= link_to edit_vehiculo_path(vehiculo), class: "small-text btn btn-success btn-sm", title: "Solicitar servicio" do %>
                      <i class="fas fa-wrench"></i>
                    <% end %>
                    <%= link_to edit_vehiculo_path(vehiculo), class: "small-text btn btn-warning btn-sm", style: "margin-left: 5px;",  title: "Editar vehiculo" do %>
                      <i class="fas fa-pencil-alt"></i>
                    <% end %>
                    <%= button_to vehiculo,  data: { confirm: "¿Estás seguro?", turbo_confirm: "¿Estás seguro que deceas eliminar este vehiculo?" }, method: :delete, class: "small-text btn btn-danger btn-sm", style: "margin-left: 5px;", title: "Eliminar vehiculo" do %>
                      <i class="fas fa-times"></i>
                    <% end %>
                    <% if current_user.admin? %>
                      <%= link_to user_path(vehiculo.user), class: "small-text btn btn-primary btn-sm ml-2", style: "margin-left: 5px;", title: "Ver detalles del dueño" do %>
                        <i class="fas fa-eye"></i>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="d-flex justify-content-between">
          <%= link_to "Volver a la página principal", root_path, class: "btn btn-color btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>
