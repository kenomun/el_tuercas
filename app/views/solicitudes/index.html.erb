<div id="servicios">
  <div class="row justify-content-center">
    <div class="card col-md-8">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <h5 class="card-title">Listado de Servicios</h5>
          <%= link_to new_solicitude_path, class: "small-text btn btn-success btn-sm" do %>
            <i class="fas fa-plus"></i> Agregar Servicio
          <% end %>
        </div>
        <table class="table table-striped table-sm mt-3">
          <thead>
            <tr>
              <th>Código</th>
              <th>Usuario</th>
              <th>Vehículo</th>
              <th>Modelo</th>
              <th>Fecha de Inicio</th>
              <th>Fecha de Término</th>
              <th>Estado</th>
            </tr>
          </thead>
          <tbody>
            <% @solicitudes.each do |solicitud| %>
              <tr>
                <td><%= solicitud.codigo %></td>
                <td><%= solicitud.user.nombre %></td>
                <td><%= solicitud.vehiculo.marca %></td>
                <td><%= solicitud.vehiculo.modelo %></td>
                <td><%= solicitud.fecha_inicio.strftime('%Y-%m-%d') %></td>
                <td><%= solicitud.fecha_termino.nil? ? 'Pendiente' : solicitud.fecha_termino.strftime('%Y-%m-%d') %></td>
                <td><%= solicitud.estado %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="d-flex justify-content-between">
          <%= link_to "Volver a la página principal", root_path, class: "btn btn-color btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>
